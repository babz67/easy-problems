{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "stopAtEntry": false,
            "externalConsole": false,
            "cwd": "${fileDirname}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // This tells the debugger to run your "build" task first
            "preLaunchTask": "build",
            // OS-specific settings for the program path
            "windows": {
                "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "miDebuggerPath": "C:/MinGW/your/path/to/mingw64/bin/gdb.exe" // <-- ⚠️ UPDATE THIS GDB PATH FOR WINDOWS
            },
            "linux": {
                "program": "${fileDirname}/${fileBasenameNoExtension}"
            }
        }
    ]
}