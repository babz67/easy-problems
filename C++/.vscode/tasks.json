{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "windows": {
                "command": "g++",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "-O0",
                    "-Wall",
                    "-Wextra",
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "command": "g++",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "-O0",
                    "-Wall",
                    "-Wextra",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}"
                ]
            }
        }
    ]
}